<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash__screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:background="#8e24aa"
    android:paddingTop="16dp"
    tools:context="com.deletejunk.rabbi.Splash_Screen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout"
        android:alpha="0"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="UselessParent">


        <com.gigamole.library.PulseView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:pv_measure="height"
            android:id="@+id/pv"
            app:pv_icon="@drawable/noewlogo"
            app:pv_icon_width="100dp"
            app:pv_icon_height="100dp"
            app:pv_spawn_period="500"
            app:pv_alpha="70"
            app:pv_color="#FFF"

            />

    </LinearLayout>


</RelativeLayout>
