<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#3a02bd" />
            <gradient android:angle="-90" android:startColor="#0277bd" android:endColor="#8b0877"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#c7045c" />
            <solid android:color="#c6148e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#0277bd" />
            <gradient android:angle="-90" android:startColor="#0277bd" android:endColor="#a70988" />
        </shape>
    </item>
</selector>